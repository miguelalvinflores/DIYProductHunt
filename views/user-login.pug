include utils.pug
if(loginErrors)
    div(style="display:block").modal-log-in.modal
        div.modal-login
            <img class='diy-logo' src=https://res.cloudinary.com/dbu0tmeuc/image/upload/v1618176454/diy-logo-2_wpov67.png alt="logo" />
            div#signup-errors
                +validationErrorsSummary(loginErrors)
                form(method="post" action="/users/login")
                    input(type="hidden" value=csrfToken name="_csrf")
                    input(type="hidden" value=pugFile name=pugFile)
                    +field("User Name", "userNameLogin", null)
                    +field("Password", "passwordLogin", null, "password")
                    div#log-in-btn
                        button(type="submit") Log In
                div#user-login-demo
                    a(href='/users/demo-login'): button#user-login-demo-btn Demo Login
                button.login-cancel Cancel
                div
                    a(href="/users/signup") Don't Have An Account?
                    p
else
    div(style="display:none").modal-log-in.modal
        div.modal-login
           <img class='diy-logo' src="https://res.cloudinary.com/dbu0tmeuc/image/upload/v1618176454/diy-logo-2_wpov67.png" alt="logo" />
            div#signup-errors
                +validationErrorsSummary(loginErrors)
                form(method="post" action="/users/login")
                    input(type="hidden" value=csrfToken name="_csrf")
                    input(type="hidden" value=pugFile name=pugFile)
                    +field("User Name", "userNameLogin", null)
                    +field("Password", "passwordLogin", null, "password")
                    div#log-in-btns
                        div#log-in-btn
                            button(type="submit") Log In
                        div#user-login-demo
                            a(href='/users/demo-login'): button#user-login-demo-btn Demo Login
                        button.login-cancel Cancel
                div.no-acct-container
                    a(class='no-acct' href="/users/signup") Don't Have An Account?
                    p
