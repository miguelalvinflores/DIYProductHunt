mixin field(labelText, fieldName, fieldValue, fieldType="text")
    div
        label(class="form-label" for=fieldName)=labelText
        input(class="form-input" type=fieldType id=fieldName name=fieldName value=fieldValue required)


mixin validationErrorsSummary(errors)
    if errors
        div
            p Please correct the following:
            ul
                each error in errors
                    li= error
